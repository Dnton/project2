<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <!-- Title -->
            <h1><%= foundpost.header %></h1>

            <!-- Author -->
            <p class="lead">
                by <%= user.local.name %>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on <%= foundpost.time %> </p>

            <hr>

            <!-- Post Content -->
            <p class="lead"><%= foundpost.content %></p>

            <hr>

            <!-- Blog Comments -->

            <!-- Comments Form -->
            <div class="well">
                <h4>Leave a Comment:</h4>
                <form role="form" action="/posts/<%= foundpost.id %>" method="POST" class="post-comments">
                    <div class="form-group">
                        <input type="text" name="comment[name]" id="comment-name" placeholder="Name" class="form-control">
                      <textarea class="form-control" rows="3" name="comment[content]" id="posts-content" placeholder=""></textarea>
                    </div>
                  <input type="submit" value='Comment'>
                </form>
            </div>

            <hr>

            <!-- Posted Comments -->

            <!-- Comment -->
            <div class="media">
                <div class="pull-left"></div>
                </a>
                <div class="media-body">
                  <% postComments.forEach(function(comment) { %>
                    <h4 class="media-heading"> <%= comment.name %>
                    <small><%=comment.time%></small>
                    </h4>
                    <%= comment.content %>
                    <br><br>
                    <form method="POST" action="/posts/<%= foundpost.id%>/comments/<%= comment.id%>?_method=DELETE">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit">Delete</button>
                  </form>
                  <hr>
                  <% }) %>
                </div>
            </div>

      </div>
    </div>
</div>
    <!-- /.row -->
